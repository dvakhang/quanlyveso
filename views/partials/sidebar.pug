.sidebar(data-active-color='blue', data-background-color='black', data-image='/assets/img/sidebar-1.jpg')
  .logo
    a.simple-text(href='/')
      | Fibo
  .logo.logo-mini
    a.simple-text(href='/')
      | Fibo
  .sidebar-wrapper
    .user
      .photo
        img(src='/assets/img/faces/avatar.jpg')
      .info
        a.collapsed(data-toggle='collapse', href='#collapseExample')
          span= user.profile.name || user.username
          | &nbsp;
          b.caret
        #collapseExample.collapse
          ul.nav
            li
              a(href='/pageinfo')
                span.sidebar-normal My Profile
            if user.admin
              li
                a(href='/settings')
                  span.sidebar-normal Settings
    ul.nav
      li(class=activePage=='agent' ? "active" : "")
        a(href='/agent')
          i.material-icons device_hub
          p Đại lý
      li(class=activePage=='distribute' ? "active" : "")
        a(href='/distribute')
          i.material-icons insert_chart
          p Phân phối / Trả vé
      li(class=activePage=='setting' ? "active" : "")
        a(href='/setting')
          i.material-icons settings
          p Setting
