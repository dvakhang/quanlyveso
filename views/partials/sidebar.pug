.sidebar(data-active-color='blue', data-background-color='black', data-image='/assets/img/sidebar-1.jpg')
  .logo
    a.simple-text(href='/')
      | Fibo
  .logo.logo-mini
    a.simple-text(href='/')
      | Fibo
  .sidebar-wrapper
    .user
      .photo
        img(src='/assets/img/faces/avatar.jpg')
      .info
        a.collapsed(data-toggle='collapse', href='#collapseExample')
          span= user.profile.name || user.username
          | &nbsp;
          b.caret
        #collapseExample.collapse
          ul.nav
            li
              a(href='/pageinfo')
                span.sidebar-normal My Profile
            if user.admin
              li
                a(href='/settings')
                  span.sidebar-normal Settings
    ul.nav
      li(class=activePage=="dashboard" ? "active" : "")
        a(href='#dashboard', data-toggle="collapse")
          i.material-icons dashboard
          p
            | Sales
            b.caret
        #dashboard.collapse
          ul.nav
            li(class=subActivePage=="distributed-domains" ? "active" : "")
              a(href="/dashboard/distributed-domains")
                span.sidebar-normal Distributed Domains
            li(class=subActivePage=="preorder-domains" ? "active" : "")
              a(href="/dashboard/preorder-domains")
                span.sidebar-normal PreOrder Domains
            li(class=subActivePage=="succeed-domains" ? "active" : "")
              a(href="/dashboard/succeed-domains")
                span.sidebar-normal Sold Domains
            li(class=subActivePage=="invested-domains" ? "active" : "")
              a(href="/dashboard/invested-domains")
                span.sidebar-normal Invested Domains
